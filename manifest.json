{
    "name": "DICOM Browser",
    "short_name": "DICOM",
    "description": "A Progressive Web App for viewing DICOM images.",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#343a40",
    "theme_color": "#000000",
    "icons": [
        {
            "src": "images/logo.webp",
            "sizes": "192x192",
            "type": "image/webp"
        }
    ],
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "application/dicom": [".dcm", ".dicom", ".dc3", ".dcm30"]
            }
        }
    ]
}